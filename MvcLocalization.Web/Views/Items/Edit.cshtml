@using MvcLocalization.LocalizationResources.Views.Items
@model MvcLocalization.Web.Models.Item

@{
    ViewBag.Title = ItemsStrings.EditTitle;
}

<h2>@ItemsStrings.EditTitle</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Item</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Weight)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Weight)
            @Html.ValidationMessageFor(model => model.Weight)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProducedAt)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProducedAt)
            @Html.ValidationMessageFor(model => model.ProducedAt)
        </div>

        <p>
            <input type="submit" value="@ItemsStrings.SaveButtonText" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(ItemsStrings.BackToList, "Index")
</div>

@section Scripts {
    <script src="~/Scripts/app/editItem.js"></script>
}
